<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<?import javafx.scene.control.PasswordField?>
<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
            minWidth="-Infinity" prefHeight="550.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/null" xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.java.controller.RegistrationScreenController">
    <GridPane prefHeight="500.0" prefWidth="600.0">
        <columnConstraints>
            <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES"
                               maxWidth="120.0" minWidth="10.0"
                               prefWidth="100.0"/>
            <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES"
                               maxWidth="420.0" minWidth="100.0"
                               prefWidth="300.0"/>
            <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES"
                               maxWidth="120.0" minWidth="10.0"
                               prefWidth="150.0"/>

        </columnConstraints>
        <rowConstraints>
            <RowConstraints minHeight="10.0" prefHeight="80"/>
            <RowConstraints minHeight="10.0" prefHeight="50"/>
            <RowConstraints minHeight="10.0" prefHeight="50"/>
            <RowConstraints minHeight="10.0" prefHeight="50"/>
            <RowConstraints minHeight="10.0" prefHeight="50"/>
            <RowConstraints minHeight="10.0" prefHeight="50"/>
            <RowConstraints minHeight="10.0" prefHeight="50"/>
            <RowConstraints minHeight="10.0" prefHeight="50"/>
        </rowConstraints>
        <Label GridPane.columnIndex="1"
               GridPane.rowIndex="0" prefHeight="23.0" prefWidth="221.0"
               text="Sign Up"/>
        <Label text="First Name:" GridPane.columnIndex="0"
               GridPane.rowIndex="1"/>
        <TextField fx:id="firstField" promptText="Enter First Name Here"
                   GridPane.columnIndex="1" GridPane.rowIndex="1"/>
        <Label text="Last Name:" GridPane.columnIndex="0"
               GridPane.rowIndex="2"/>
        <TextField fx:id="lastField" promptText="Enter Last Name Here"
                   GridPane.columnIndex="1" GridPane.rowIndex="2"/>
        <Label text="Username:" GridPane.columnIndex="0"
               GridPane.rowIndex="3"/>
        <TextField fx:id="userField" prefWidth="313.0"
                   promptText="Enter Username Here" GridPane.columnIndex="1"
                   GridPane.rowIndex="3"/>
        <Label text="Password:" GridPane.columnIndex="0"
               GridPane.rowIndex="4"/>
        <PasswordField fx:id="passField" promptText="Enter Password Here"
                       GridPane.columnIndex="1" GridPane.rowIndex="4"/>
        <Label text="User Type:" GridPane.columnIndex="0"
               GridPane.rowIndex="5"/>
        <ComboBox fx:id="typeBox" prefWidth="150.0" GridPane.columnIndex="1"
                  GridPane.halignment="LEFT" GridPane.rowIndex="5"
                  promptText="User Type"/>
        <Button onAction="#handleCancelPressed"
                text="Cancel" GridPane.columnIndex="2" GridPane.rowIndex="0"/>
        <Button onAction="#handleRegisterSubmitPressed" text="Submit"
                GridPane.columnIndex="1" GridPane.rowIndex="6"/>


    </GridPane>
</AnchorPane>
